{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "target": "ES6",
    "lib": ["ES2015", "ES2016", "ES2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "typeRoots": ["../"],
    "types": []
  },
  "include": [
    "*.js",
    "../index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "*.mnaddon"
  ]
}
